<ul>
  <% if ::Refinery::CustomLists::Admin::CustomListsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.custom_lists_admin_custom_lists_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_custom_lists_admin_custom_list_path,
                 :class => "add_icon" %>
  </li>
  <%= render '/refinery/custom_lists/admin/shared/links' %>

<% if !searching? && ::Refinery::CustomLists::Admin::CustomListsController.sortable? && ::Refinery::CustomLists::CustomList.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Custom Lists"),
                 refinery.custom_lists_admin_custom_lists_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Custom Lists"),
                 refinery.custom_lists_admin_custom_lists_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
